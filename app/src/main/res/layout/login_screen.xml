<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lighter_black"
    android:padding="16dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/lanpuLogoBlackLoginSignupScreen"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:src="@drawable/admin_lanpu_logo_yellow"
        android:layout_marginBottom="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gui_background_black"
        android:padding="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow"
            android:textAlignment="center"
            android:padding="8dp"
            android:textStyle="bold|italic"
            android:text="LOGIN"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/yellow"
            android:text="E-Mail"/>
        <EditText
            android:id="@+id/emailLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8sp"
            android:paddingStart="12sp"
            android:textSize="14sp"
            android:background="@drawable/gui_button_text_white"
            android:hint="john.doe@student.umn.ac.id"
            android:inputType="textEmailAddress"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/yellow"
            android:layout_marginTop="8dp"
            android:text="Password"/>
        <EditText
            android:id="@+id/passwordLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8sp"
            android:paddingStart="12sp"
            android:textSize="14sp"
            android:background="@drawable/gui_button_text_white"
            android:hint="********"
            android:inputType="textPassword"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.1"
            android:background="@drawable/gui_button_text_yellow"
            android:text="Login"/>
    </LinearLayout>

</LinearLayout>