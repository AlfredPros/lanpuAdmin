<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lighter_black"
    android:padding="16dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/lanpuLogoBlackLoginSignupScreen"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:src="@drawable/admin_lanpu_logo_yellow"
        android:layout_marginBottom="16dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gateInButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:letterSpacing="0.1"
        android:background="@drawable/gui_button_text_yellow"
        android:text="Gate In" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gateOutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:letterSpacing="0.1"
        android:background="@drawable/gui_button_text_yellow"
        android:text="Gate Out"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/topUpButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:letterSpacing="0.1"
        android:background="@drawable/gui_button_text_yellow"
        android:text="Top Up"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logOutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:letterSpacing="0.1"
        android:background="@drawable/gui_button_text_black"
        android:textColor="@color/yellow"
        android:text="Logout"/>

</LinearLayout>